{% extends "_layouts/private_default.twig" %}

{% block content %}
    Hello World from index.twig!

    {% if posts | length %}
        {% for p in posts %}
            <div class="flex flex-col">
                <h1>
                    <a href="{{ site_url }}post/{{ p.id }}">{{ p.title }}</a>
                </h1>
                <div class="italic">{{ p.date | date('F j, Y')  }}</div>
                <hr>
                <p>{{ p.preview }}</p>
                <div>
                    <a href="{{ site_url }}post/{{ p.id }}">Read</a>
                </div>
            </div>
        {% endfor %}
    {% else %}

        There are no posts to view

    {% endif %}
{% endblock %}
